{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile sdb",
			"type": "shell",
			"command": "mkdir -p build && cd build && cmake .. -DCMAKE_TOOLCHAIN_FILE=$HOME/Code/vcpkg/scripts/buildsystems/vcpkg.cmake -DBUILD_TESTING=true && make -j$(nproc) && cp compile_commands.json ../../.vscode/build",
			"presentation": {
				"echo": true,
				"clear": true,
				"group": "vm"
			},
			"options": {
				"cwd": "${workspaceFolder}/sdb",
				"env": {
					"CC": "gcc",
					"CXX": "g++",
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": false,
			"problemMatcher": [],
			"detail": "编译 sdb",
		},
		{
			"label": "run sdb",
			"type": "shell",
			"command": "./tools/sdb",
			"args": [
				"yes"
			],
			"presentation": {
				"echo": true,
				"clear": true,
				"group": "vm"
			},
			"options": {
				"cwd": "${workspaceFolder}/sdb/build",
			},
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"isBackground": false,
			"problemMatcher": [],
			"detail": "运行 sdb",
			// "dependsOn": [
			// 	"compile sdb",
			// ]
		},
	]
}
